<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre_name %>
  <%= f.text_field :genre_name, list: "genre_id" %>
    <datalist id="genre_id">
      <% Genre.all.each do |genre| %>
        <option value="<%= genre.name %>" ></option>
      <% end %>  
    </datalist>
   <%= f.text_field "song[notes_ids][]" %>
  
  <%= f.submit %>
<% end %>

